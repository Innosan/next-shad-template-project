{
	"name": "next-template",
	"description": "Next.js Starter Template with TypeScript, Tailwindcss, Shadcn-ui, ESLint, and Prettier",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbo",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"lint:fix": "next lint --fix",
		"preview": "next build && next start",
		"type:check": "tsc --noEmit",
		"format": "prettier --write \"src/**/*.{ts,tsx,mdx}\" --cache",
		"format:check": "prettier --check \"src/**/*.{ts,tsx,mdx}\" --cache",
		"ci-check": "pnpm lint && pnpm type:check && pnpm format:check",
		"fix-all": "pnpm lint:fix && pnpm format"
	},
	"dependencies": {
		"@radix-ui/react-navigation-menu": "^1.2.1",
		"@radix-ui/react-slot": "^1.1.0",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.1.1",
		"eslint-plugin-jsx-a11y": "^6.10.0",
		"eslint-plugin-prettier": "^5.2.1",
		"lucide-react": "^0.301.0",
		"next": "^14.2.15",
		"next-themes": "^0.2.1",
		"react": "^18.3.1",
		"react-dom": "^18.3.1"
	},
	"devDependencies": {
		"@ianvs/prettier-plugin-sort-imports": "^4.3.1",
		"@t3-oss/env-nextjs": "^0.11.1",
		"@types/node": "20.10.5",
		"@types/react": "18.2.45",
		"@types/react-dom": "18.2.18",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"autoprefixer": "10.4.20",
		"eslint": "8.56.0",
		"eslint-config-next": "14.0.4",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-react": "^7.37.1",
		"eslint-plugin-tailwindcss": "^3.17.5",
		"postcss": "8.4.47",
		"prettier": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.5.14",
		"shadcn-ui": "^0.5.0",
		"tailwind-merge": "^2.5.3",
		"tailwindcss": "3.4.13",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.6.3",
		"zod": "^3.23.8"
	}
}
